<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="340dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/picc"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/txt_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="4K WALLPAPER APP"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by"
                android:layout_below="@id/txt_app"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#6C6C6C"
                android:id="@+id/dev"/>


            <TextView
                android:id="@+id/txt_noman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dev"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="MUHAMMAD NOMAN"
                android:textColor="#303030"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_doc"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/txt_noman"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textColor="#454545"
                android:id="@+id/txt"/>

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@id/txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/dialog_close_btn"
                android:src="@drawable/ic_baseline_close" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>